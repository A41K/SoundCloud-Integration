{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tidal-integration",
  "title": "Tidal Integration",
  "description": "Integrate with Tidal to control playback and open the app.",
  "icon": "extension-icon.png",
  "author": "samliu",
  "license": "MIT",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "commands": [
    {
      "name": "open",
      "title": "Open Tidal",
      "description": "Open the Tidal app",
      "mode": "view"
    },
    {
      "name": "play",
      "title": "Play Song",
      "description": "Play Song",
      "mode": "view"
    },
    {
      "name": "pause",
      "title": "Pause Song",
      "description": "Pause Song",
      "mode": "view"
    },
    {
      "name": "search",
      "title": "Search Song",
      "description": "Search Song",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@jjdenhertog/tidal-music-search": "^1.0.5",
    "@raycast/api": "^1.101.1",
    "@raycast/utils": "^1.17.0",
    "puppeteer": "^24.16.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "preferences": [
    {
      "name": "tidalClientId",
      "type": "password",
      "title": "Tidal Client ID"
    },
    {
      "name": "tidalClientSecret",
      "type": "password",
      "title": "Tidal Client Secret"
    }
  ],
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
